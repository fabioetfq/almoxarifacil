<h2>Carrinho de <%= @user.email %></h2>

<div>
  <% @transactions.each do |t| %>
    <ul>
      <li><%= t.material.name %> | <%= form_with do |form| %> <%= form.number_field :amount %> <% end %> | <%= link_to 'Excluir', transaction_path(t), method: :delete, data: { confirm: "Excluir #{t.material.name} do carrinho?" } %></li>
    </ul>
  <% end %>
</div>
<div>
  <%= link_to 'Continuar comprando', materials_path %>
</div>

